        .section {
            background-color: #f9f9f9;
            border-radius: 10px;
            padding: 25px 30px;
            margin-bottom: 40px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }



        h1 {
            color: #336699;
            text-align: center;
            margin-bottom: 40px;
        }

        h2 {
            color: #336699;
            margin-top: 0;
        }

    .sequence {
      font-family: 'Courier New', monospace;
      background-color: #eeeeee;
      padding: 15px;
      border-left: 5px solid #88aacc;
      border-radius: 5px;
      word-wrap: break-word;
      white-space: pre-wrap;
      margin-top: 15px;
    }

    a {
      color: #0055aa;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    img {
      max-width: 100%;
      height: auto;
      border-radius: 6px;
      margin: 20px 0;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .highlight {
      font-style: italic;
      color: #444;
    }

    </style>
</head>
<body>
    <h1>{{ title }}</h1>

    <div class="section">
        <h3>Gene: {{ gene }}</h3>    
        <p>{{ gene_info }}</p>

        <div class="sequence">{{ sequence }}</div>
        <p><a href="{{ genbank }}" target="_blank">View GenBank Entry</a></p>
    </div>
    
    <div class="section">
        <h3>Organism: {{ common_name }} (<i>{{ species_name }}</i>)</h3>
        <img src="{{ image }}" alt="{{ common_name }}">

        <p>{{ info }}</p>
        <p>{{ research }}</p>
    </div>
</body>
</html>
